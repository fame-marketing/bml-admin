<div class="eventsInfo adminContent_cont">
  <div class="recentEvents">
    <h2>RECENT EVENTS</h2>

    {{#if events}}

      <li class="recentEventsHeading tableHeading">
        <span class="recentPage_city">Type</span>
        <span class="recentPage_state">Time</span>
        <span class="recentPage_url">Employee</span>
        <span class="recentPage_checkin">Location</span>
      </li>

      <ul class="recentEvents_list">
        {{#each events}}
          <li class="recentEvents_item">
            <span>{{this.EventType}}</span>
            <span>{{this.EventTime}}</span>
            <span>{{this.UserName}}</span>
            <span>{{this.City}},{{this.State}}</span>
          </li>
        {{/each}}
      </ul>

      <div class="pendingEventsCounter">
        {{#if pendingEvents }}
          events currently processing - {{pendingEvents}}
        {{else}}
          All events have been processed
        {{/if}}
      </div>

    {{else}}

      <p>No events have been processed yet</p>

    {{/if}}

  </div>
</div>
